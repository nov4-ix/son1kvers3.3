# Nova Post Pilot - Environment Variables

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# OpenAI Configuration (for AI content generation)
VITE_OPENAI_API_KEY=sk-your-openai-key-here

# Instagram OAuth Configuration
VITE_INSTAGRAM_CLIENT_ID=your-instagram-client-id
VITE_INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret
VITE_INSTAGRAM_REDIRECT_URI=http://localhost:3000/auth/instagram/callback

# Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
VITE_STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
VITE_STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Scheduler Configuration
VITE_SCHEDULER_INTERVAL_MS=30000
VITE_SCHEDULER_ENABLED=true

# Demo Mode
VITE_DEMO_MODE=false

# App Configuration
VITE_APP_NAME=Nova Post Pilot
VITE_APP_URL=http://localhost:3000
VITE_APP_VERSION=1.0.0

# Analytics (optional)
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_MIXPANEL_TOKEN=your-mixpanel-token

# Feature Flags
VITE_FEATURE_AI_CONTENT=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_BILLING=true
VITE_FEATURE_SCHEDULER=true